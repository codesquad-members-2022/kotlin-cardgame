<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Player1"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btn_player1_card1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_one"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_player1_card2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_one"
        app:layout_constraintStart_toEndOf="@id/btn_player1_card1"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_player1_medal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_player_one"
        app:layout_constraintStart_toEndOf="@id/btn_player1_card2"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        android:text="🏆"

        />
    <TextView
        android:id="@+id/tv_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_player1_card1"
        android:text="Player2"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/btn_player2_card1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_player2_card2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_two"
        app:layout_constraintStart_toEndOf="@id/btn_player2_card1"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/btn_player2_medal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_player_two"
        app:layout_constraintStart_toEndOf="@id/btn_player2_card2"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        android:text="🏆"

        />

    <TextView
        android:id="@+id/tv_player_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_player2_card1"
        android:text="Player3"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/btn_player3_card1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_three"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_player3_card2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_three"
        app:layout_constraintStart_toEndOf="@id/btn_player3_card1"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_player3_medal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_player_three"
        app:layout_constraintStart_toEndOf="@id/btn_player3_card2"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        android:text="🏆"

        />
    <TextView
        android:id="@+id/tv_player_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_player3_card1"
        android:text="Robot"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/btn_robot_card1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_robot"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_robot_card2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_robot"
        app:layout_constraintStart_toEndOf="@id/btn_robot_card1"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/btn_robot_card3"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/btn_robot_card2"
        app:layout_constraintTop_toBottomOf="@id/tv_player_robot" />
    <Button
        android:id="@+id/btn_robot_medal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_player_robot"
        app:layout_constraintStart_toEndOf="@id/btn_robot_card3"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        android:text="🏆"

        />

</androidx.constraintlayout.widget.ConstraintLayout>