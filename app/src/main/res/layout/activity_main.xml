<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="60dp"
    android:paddingEnd="16dp"
    android:paddingBottom="60dp"
    android:weightSum="10"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3.1"
        android:autofillHints="no"
        android:background="@drawable/edittext_corner_round"
        android:hint="닉네임"
        android:inputType="text"
        android:maxLength="5"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_input_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textStyle="bold"
        tools:text="알파벳이 1개 이상 포함되어야 합니다. (공백, 특수문자 제외)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="2.6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_character1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/character_btn_normal_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_character1_normal_24" />

        <ImageButton
            android:id="@+id/btn_character2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/character_btn_normal_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_character2_normal_24" />

        <ImageButton
            android:id="@+id/btn_character3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/character_btn_normal_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_character3_normal_24" />

        <ImageButton
            android:id="@+id/btn_character4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/character_btn_normal_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_character4_normal_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/iv_select_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            tools:src="@drawable/ic_character2_normal_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            android:text="다음" />
    </LinearLayout>
</LinearLayout>