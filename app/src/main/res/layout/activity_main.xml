<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layoutDirection="inherit"
        android:layoutMode="clipBounds"
        app:counterEnabled="true"
        app:counterMaxLength="5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textInputLayout"
        android:layout_marginStart="35dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_color_selector"
        android:contentDescription="@string/imagebutton1"
        app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_alignTop="@id/textInputLayout"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_color_selector"
        android:contentDescription="@string/imagebutton2"
        app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@id/textInputLayout"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_color_selector"
        android:contentDescription="@string/imagebutton3"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_dissatisfied_24" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@id/textInputLayout"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_color_selector"
        android:contentDescription="@string/imagebutton4"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/imageview" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="다음" />

</RelativeLayout>